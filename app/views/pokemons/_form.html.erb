<%= simple_form_for pokemon do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :element, collection: Pokemon::ELEMENTS , prompt: "Select one" %>
  <%= f.input :evolution_level, collection: Pokemon::LEVELS , prompt: "Select one" %>
  <%= f.submit "Save the pokemon", class: 'btn btn-primary' %>
<% end %>

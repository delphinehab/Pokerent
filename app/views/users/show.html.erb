<div class="container">
  <div class="cards">

    <div class="card" style="width: 30rem">
      <h1>MY BOOKINGS</h1>
      <ul>
        <% @bookings.each do |booking| %>
        <li><%= booking.pokemon.name %>
          rented from
          <%= booking.pokemon.user.email %>
        </li>
        <%= link_to "Booking details", booking_path(booking) %>
        <% end %>
      </ul>
    </div>

    <div class="card" style="width: 30rem">
      <h1>MY POKEMONS</h1>
      <div class="img-pokemons justify-content-around">
        <% @pokemons.each do |pokemon| %>
          <div class="pokemon-div">
            <%= link_to pokemon_path(pokemon) do %>
              <%= cl_image_tag pokemon.photo.key, class: 'round-pokemon'  %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>





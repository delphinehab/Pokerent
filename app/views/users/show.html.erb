<div class="container ptpb">

  <div class="container">
    <div class="cards">

      <div class="card" style="width: 30rem">
        <h1>MY BOOKINGS</h1>
        <div class="img-pokemons justify-content-around">
          <% @bookings.each do |booking| %>
            <div class="pokemon-div">
              <%= link_to booking_path(booking) do %>
                <% if booking.pokemon.photo.attached? %>
                  <%= cl_image_tag booking.pokemon.photo.key, class: 'round-pokemon' %>
                <% else %>
                  <div class="pokemon-element" style="background-image: linear-gradient(90deg, rgba(255,255,255,0.5) 100%, rgba(247,247,247,0.5) 100%, rgba(255,255,255,1) 100%),url(<%= image_url("#{booking.pokemon.element}.png")%>);">
                    <h4 class="pokemon-name"><%= booking.pokemon.name %></h4>
                  <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <% if current_user.pokemons.count > 0 %>
        <div class="card" style="width: 30rem">
          <h1>MY POKEMONS</h1>
          <div class="img-pokemons justify-content-around">
            <% @pokemons.each do |pokemon| %>
              <div class="pokemon-div">
                <%= link_to pokemon_path(pokemon) do %>
                  <% if pokemon.photo.attached?%>
                    <%= cl_image_tag pokemon.photo.key, class: 'round-pokemon'  %>
                  <% else %>
                    <div class="pokemon-element" style="background-image: linear-gradient(90deg, rgba(255,255,255,0.5) 100%, rgba(247,247,247,0.5) 100%, rgba(255,255,255,1) 100%),url(<%= image_url("#{pokemon.element}.png")%>);">
                      <h4 class="pokemon-name"><%= pokemon.name %></h4>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <div class="poke-booking">
                <% if pokemon.bookings %>
                  <% pokemon.bookings.each do |booking| %>
                    <%= link_to "Booking info", booking_path(booking) %>
                    <% if booking.status == nil %>
                      <p>Waiting for validation</p>
                      <%= simple_form_for(booking) do |f| %>
                          <%= f.input :status, as: :hidden, input_html: {value: true} %>
                          <%= f.submit "Validate" %>
                      <% end %>
                      <%= simple_form_for(booking) do |f| %>
                          <%= f.input :status, as: :hidden, input_html: {value: false} %>
                          <%= f.submit "Refuse" %>
                      <% end %>
                    <% elsif booking.status %>
                      <p>Validated</p>
                    <% else %>
                      <p>Refused</p>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>


      <div class="card" style="width: 30rem">
        <h1>MY INFOS</h1>
        <% if @user.photo.attached? %>
          <%= cl_image_tag @user.photo.key %>
        <% else %>
          <p><%= link_to 'Choose a profile picture', edit_user_path(@user) %></p>
        <% end %>
        <p>First name : <%= @user.firstname %></p>
        <p>Last name : <%= @user.lastname %></p>
        <p>My email : <%= @user.email %></p>
        <p><%= link_to 'Edit my profile', edit_user_path(@user) %></p>
      </div>

    </div>
  </div>
</div>
